<div class="d-flex justify-content-between">
  <h3>Ver Usuario</h3>
  <div>
    <% if can? :index, User %>
      <%= link_to users_path, class: "btn btn-primary" do %>
        <i class="fas fa-arrow-left"></i> Regresar
      <% end %>
    <% end %>
    <% if can? :edit, @user %>
      <%= link_to edit_user_path(@user), class: "btn btn-warning" do %>
        <i class="fas fa-pencil"></i> Editar
      <% end %>
    <% end %>
    <% if can? :destroy, @user %>
      <%= link_to @user, method: :delete, data: { confirm: 'Esta seguro?' }, class: "btn btn-danger" do %>
        <i class="fas fa-trash"></i> Eliminar
      <% end %>
    <% end %>
  </div>
</div>

<div class="mt-4">
  <%= render "form", user: @user, disabled: true %>
</div>
