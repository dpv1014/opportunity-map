<div class="d-flex justify-content-between">
  <h3>Ver Indicador</h3>
  <div>
    <% if can? :index, IndicatorTracking %>
      <%= link_to indicator_indicator_trackings_path(@indicator), class: "btn btn-primary" do %>
        <i class="fas fa-chart-bar"></i> Seguimiento Indicador
      <% end %>
    <% end %>
    <% if can? :index, Indicator %>
      <%= link_to indicators_path, class: "btn btn-primary" do %>
        <i class="fas fa-arrow-left"></i> Regresar
      <% end %>
    <% end %>
    <% if can? :edit, @indicator %>
      <%= link_to edit_indicator_path(@indicator), class: "btn btn-warning" do %>
        <i class="fas fa-pencil"></i> Editar
      <% end %>
    <% end %>
    <% if can? :destroy, @indicator %>
      <%= link_to @indicator, method: :delete, data: { confirm: 'Esta seguro?' }, class: "btn btn-danger" do %>
        <i class="fas fa-trash"></i> Eliminar
      <% end %>
    <% end %>
  </div>
</div>

<div class="mt-4">
  <%= render "form", indicator: @indicator, disabled: true %>
</div>
